@model IEnumerable<Marketim.Models.Product>
@{
    ViewBag.Title = "Tumunugoster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="main-content">
    <div class="row">
        <div class="span12">
            <div class="row">
                <div class="span12">
                    <h4 class="title">
                        <span class="pull-left"><span class="text"><span class="line">Tüm <strong>Ürünler</strong></span></span></span>
                        <span class="pull-right">
                            <a class="left button" href="#myCarousel" data-slide="prev"></a><a class="right button" href="#myCarousel" data-slide="next"></a>
                        </span>
                    </h4>
                    <div id="myCarousel" class="myCarousel carousel slide">
                        <div class="carousel-inner">
                            <div class="active item">
                                <ul class="thumbnails">
                                    @foreach (var e in Model)
                                    {
                                        <li class="span3">
                                            <div class="product-box">
                                                <span class="sale_tag"></span>
                                                <p>
                                                    <a href="#">
                                                        <img src="@e.Productimage" alt="" />

                                                    </a>
                                                </p>
                                                <a href="#" class="title">@e.Productname</a><br />
                                                <a href="#" class="category">@e.ProductPrice tl</a>

                                            </div>
                                        </li>
                                    }


                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
           
            </div>
            </div>
        </section>